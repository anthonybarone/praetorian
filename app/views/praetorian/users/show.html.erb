<article id="user">
  <header>
    <h1><%= @user.email %></h1>
  </header>
  <footer>
    <nav>
      <%= link_to 'Edit Account', praetorian.edit_user_path(@user), class: 'button' %>
      <%= link_to 'Delete Account', @user, 
                  method: :delete, 
                  data: { confirm: 'Are you sure you want to permanently delete your account?' },
                  class: 'button' %>
    </nav>
  </footer>
</article>